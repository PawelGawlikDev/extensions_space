---
import { Icon } from "astro-icon/components";
import ContentSection from "@/components/ContentSection.astro";
import type { FeatureItem } from "@/types";

interface Props {
  features: Array<FeatureItem>;
  leadTitle: string;
  lean: string;
}

const { features, leadTitle, lean } = Astro.props;
---

<ContentSection title={leadTitle} id="features">
  <Fragment slot="lead">{lean} </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center text-xl font-extrabold">{title}</p>
          <p class="text-center text-sm text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
